  {
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",            /* All your .ts backend files should be in src/ */
    "outDir": "./dist",            /* Compiled .js files go here */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*.ts"],       /* Only compile your backend source files */
  "exclude": ["node_modules", "dist"]
}
