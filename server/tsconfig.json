{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["*.ts", "declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}
